{
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": ".",
      "paths": {
        "@highwater/types": ["../shared/ts/src"]
      },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "target": "es6",
      "module": "commonjs"
    },
    "include": ["src", "../shared/ts/src"],
    "exclude": ["node_modules", "dist"]
}