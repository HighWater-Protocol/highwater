{
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": "src",
      "paths": {
        "@highwater/types": ["../../shared/ts/dist"]
      },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}